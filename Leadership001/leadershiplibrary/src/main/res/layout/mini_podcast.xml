<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/podcastCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mon_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/playerLayout"
            layout="@layout/media_controls"/>
        <TextView
            android:id="@+id/podcastNametxt"
            android:layout_toRightOf="@+id/playerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="filname "/>

        <ImageView
            android:padding="@dimen/appbar_padding_top"
            android:id="@+id/headerpic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots" />
    </RelativeLayout>

</android.support.v7.widget.CardView>