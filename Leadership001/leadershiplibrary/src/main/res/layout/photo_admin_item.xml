<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/mon_padding"
    app:cardElevation="@dimen/mon_divider_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="@dimen/mon_padding"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bayscape" />
    <TextView
        android:layout_toRightOf="@+id/bookIcon"
        android:id="@+id/photoFileNametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_padding"
        android:textColor="@color/blue_500"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/mon_margin"
        android:layout_below="@id/image"
        android:text="Filename inserted here" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/mon_padding"
            android:background="@color/black"
            android:layout_below="@+id/photoFileNametxt"
            android:src="@drawable/ic_cloud_upload"
            android:id="@+id/uploadIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>