<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.oneconnect.leadership.library.camera.VideoListActivity"
    tools:showIn="@layout/activity_video_list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/podcastLay"
            android:layout_margin="@dimen/mon_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/option_item"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/podcastLay"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
