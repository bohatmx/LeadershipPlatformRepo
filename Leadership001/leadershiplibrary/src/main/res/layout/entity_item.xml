<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mon_padding"
    android:layout_marginBottom="@dimen/mon_padding"
    android:layout_marginLeft="@dimen/mon_margin"
    android:layout_marginRight="@dimen/mon_margin"
    app:cardElevation="@dimen/mon_divider_small">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/frame"
            android:layout_marginTop="@dimen/mon_margin"
            android:layout_marginLeft="@dimen/mon_padding"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNumberRed"
                style="@style/RedCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="33" />

            <TextView
                android:id="@+id/txtNumberBlue"
                style="@style/BlueCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="33" />

            <TextView
                android:id="@+id/txtNumberBlack"
                style="@style/BlackCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="33" />

            <TextView
                android:id="@+id/txtNumberGrey"
                style="@style/GreyCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="33" />

            <TextView
                android:id="@+id/txtNumberGreen"
                style="@style/GreenCircleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="33" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mon_margin"
            android:layout_marginRight="@dimen/mon_margin"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_toRightOf="@id/frame">

            <RelativeLayout
                android:id="@+id/t0"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iconCalendar"
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/share" />
                <TextView
                    android:id="@+id/txtEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iconCalendar"
                    android:text="0"
                    android:layout_marginRight="@dimen/mon_margin"
                    android:textColor="@color/pink_600"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_below="@id/t0"
                android:layout_marginTop="@dimen/mon_divider"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A title will be placed here - daily thought etc. The length here is important and should be the most prominent on this screen."
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitle"
                android:layout_marginTop="@dimen/mon_margin"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_marginBottom="@dimen/mon_wide"
                android:text="Wednesday 30 December 2099 12:36"
                android:textColor="@color/blue_800"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleLayout"
            android:background="@color/grey_100"
            android:paddingTop="@dimen/mon_wide"
            android:layout_marginTop="@dimen/mon_wide">

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mon_margin"
                android:text="A subtitle of some sort will ingabit this little happy space. Hopefully there will be a little meat so that this text does not look too skinny."
                android:layout_marginRight="@dimen/mon_margin"
                android:textColor="@color/indigo_500"
                android:textSize="16sp"
                android:textStyle="normal" />


            <LinearLayout
                android:id="@+id/iconLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSubtitle"
                android:layout_marginTop="@dimen/mon_wider"
                android:paddingBottom="@dimen/mon_wide"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/deleteLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_cancel"
                        android:tint="@color/orange_800" />

                    <TextView
                        android:id="@+id/txtDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconDelete"
                        android:layout_centerHorizontal="true"
                        android:text="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linksLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_create"
                        android:tint="@color/blue_500" />

                    <TextView
                        android:id="@+id/txtLinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconUpdate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/blue_500"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/micLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconMicrophone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_microphone"
                        android:tint="@color/teal_700" />

                    <TextView
                        android:id="@+id/txtMicrophone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconMicrophone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/teal_700"
                        android:textSize="20sp"
                        android:textStyle="bold" />




                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iconLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_my_location" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconLocation"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/videosLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_videocam" />

                    <TextView
                        android:id="@+id/txtVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconVideo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/photosLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/red_700" />

                    <TextView
                        android:id="@+id/txtCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconCamera"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/red_700"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/podcastAdapterLayout"
                android:layout_below="@+id/iconLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/audio_item"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/videoAdapterLayout"
                android:layout_below="@+id/iconLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/videos_item"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/photoAdapterLayout"
                android:layout_below="@+id/iconLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/photos_item"/>
            </RelativeLayout>



        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>