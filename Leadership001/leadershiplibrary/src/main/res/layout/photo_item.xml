<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mon_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bayscape"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/captiontxt"
            android:padding="@dimen/mon_padding"
            android:layout_below="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the caption text goes here"/>

        <TextView
            android:layout_below="@+id/captiontxt"
            android:padding="@dimen/mon_padding"
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, 10 April 2015 11:19:15"/>
    </RelativeLayout>





</android.support.v7.widget.CardView>