<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.oneconnect.leadership.library.activities.CreateDailyThoughtActivity"
    tools:showIn="@layout/activity_create_daily_thought">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_margin"
        app:cardElevation="@dimen/mon_divider_small">

        <RelativeLayout
            android:id="@+id/layout"
            android:padding="@dimen/mon_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/t0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/mon_margin">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTitle"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editSubtitle"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/Catspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t2"/>

                <Button
                    android:id="@+id/btnDate"
                    style="?attr/borderlessButtonStyle"
                    android:layout_below="@+id/Catspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mon_padding"
                    android:text="Set Scheduled Date"
                    android:textColor="@color/pink_700"/>

                <RadioGroup
                    android:id="@+id/layoutb"
                    android:layout_below="@+id/btnDate"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:padding="@dimen/mon_padding"
                    android:paddingLeft="@dimen/mon_16"
                    android:paddingRight="@dimen/mon_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/internalButton"
                        android:text="Post Internal"
                        android:layout_weight="1"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/globalButton"
                        android:text="Post Globally"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>
            </RelativeLayout>


            <Button
                android:id="@+id/btn"
                style="?attr/borderlessButtonStyle"
                android:layout_below="@+id/t0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mon_padding"
                android:text="Submit Thought"
                android:textColor="@color/indigo_500" />
            <Button
                android:id="@+id/btnDone"
                style="?attr/borderlessButtonStyle"
                android:layout_below="@+id/t0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mon_padding"
                android:text="Done"
                android:textColor="@color/indigo_500" />
            <Button
                android:id="@+id/btnNewThought"
                android:layout_toRightOf="@+id/btnDone"
                style="?attr/borderlessButtonStyle"
                android:layout_below="@+id/t0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mon_padding"
                android:text="Add Another Thought"
                android:textColor="@color/indigo_500" />


            <LinearLayout
                android:layout_below="@+id/btnDone"
                android:id="@+id/iconLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/deleteLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconDelete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/ic_cancel"
                        android:tint="@color/orange_800" />

                    <TextView
                        android:id="@+id/txtDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconDelete"
                        android:layout_centerHorizontal="true"
                        android:text="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linksLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconLink"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_link_black_24dp"
                        android:tint="@color/blue_500" />

                    <TextView
                        android:id="@+id/txtLinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconLink"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/blue_500"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/micLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconMicrophone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/ic_microphone"
                        android:tint="@color/teal_700" />

                    <TextView
                        android:id="@+id/txtMicrophone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconMicrophone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/teal_700"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/videosLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconVideo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/ic_videocam" />

                    <TextView
                        android:id="@+id/txtVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconVideo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/photosLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconCamera"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/ic_camera"
                        android:tint="@color/red_700" />

                    <TextView
                        android:id="@+id/txtCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iconCamera"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/mon_wide"
                        android:alpha="0.5"
                        android:text="0"
                        android:textColor="@color/red_700"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>





    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/card"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
