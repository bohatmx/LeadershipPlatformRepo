<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/nav_layout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/train_station"
    android:theme="@style/CommuterTheme">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

    <TextView
        android:layout_below="@+id/imageView"
        android:id="@+id/owner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Leadership Nsername"
        android:textColor="@color/black" />
    <!--<ImageView
        android:scaleType="fitXY"
        android:src="@drawable/train_station"
        android:id="@+id/companyLogoIMG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/owner_email"
        android:textStyle="bold"
        android:layout_below="@id/owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email"
        android:textColor="@color/black"/>


</RelativeLayout>