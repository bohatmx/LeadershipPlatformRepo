<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/companyCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/mon_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/companyIMG"
            app:srcCompat="@drawable/train_station"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/companyTxt"
            android:text="Company Name"
            android:padding="@dimen/mon_16"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/companyIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_margin="@dimen/mon_16"
            android:id="@+id/color1"
            android:src="@drawable/xblack_box"
            android:layout_below="@+id/companyTxt"
            android:layout_toRightOf="@+id/companyIMG"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:layout_margin="@dimen/mon_16"
            android:layout_alignParentRight="true"
            android:id="@+id/color2"
            android:layout_below="@+id/companyTxt"
            android:src="@drawable/xblack_box"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>