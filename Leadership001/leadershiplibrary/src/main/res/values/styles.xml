        <item name="colorPrimaryDark">@color/red_800</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlNormal">@color/red_400</item>
        <item name="colorControlActivated">@color/pink_300</item>
        <item name="colorControlHighlight">@color/red_900</item>
        <item name="android:windowBackground">@color/material_green_50</item>
