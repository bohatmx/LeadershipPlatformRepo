<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sasa_red</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="colorAccent">@color/red_900</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="actionBarStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sasa_red</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="colorAccent">@color/orange_900</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="LeadershipTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="SubscriberTheme" parent="LeadershipTheme">
        <item name="colorPrimary">@color/sasa_red</item>
        <item name="colorPrimaryDark">@color/red_700</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialCamera.CaptureActivity" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AftaRobotTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_900</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="BeaconTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/purple_300</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/green_500</item>
    </style>

    <style name="MarshalTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/orange_600</item>
        <item name="colorPrimaryDark">@color/orange_800</item>
        <item name="colorAccent">@color/pink_600</item>
    </style>

    <style name="OwnerTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="colorAccent">@color/red_600</item>
    </style>

    <style name="DriverTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/blue_400</item>
    </style>


    <style name="PatrollerTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorAccent">@color/red_800</item>
    </style>

    <style name="AssocBuilderTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
